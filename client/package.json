{
  "name"            : "mediaserver",
  "version"         : "0.0.1",
  "description"     : "A media server",
  "main"            : "js/app.js",
  "dependencies"    : {
    "classnames"          : "^2.1.3",
    "flux"                : "^2.0.0",
    "keymirror"           : "~0.1.0",
    "object-assign"       : "^1.0.0",
    "react"               : "^15.1.0",
    "react-dom"           : "^15.1.0",
    "mousetrap"           : "^1.6.0",
    "blueimp-load-image"  : "^2.6.1",
    "spin.js"             : "^2.3.2",
    "video.js"            : "^5.10.2"
  },
  "devDependencies" : {
    "browserify"          : "^6.2.0",
    "envify"              : "^3.0.0",
    "jest-cli"            : "^0.4.3",
    "reactify"            : "^0.15.2",
    "uglify-js"           : "~2.4.15",
    "watchify"            : "^2.1.1",
    "jquery"              : "^2.2.0",
    "bootstrap"           : "^3.3.6",
    "howler"              : "^2.0.0-beta13"
  },
  "scripts"         : {
    "start"           : "watchify -o ./static/bundle.js -v -d js/app.js & sass --watch sass:./static/assets/",
    "build"           : "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > ./static/bundle.min.js",
    "test"            : "jest"
  },
  "author"          : "Nicholas M. Iodice",
  "browserify"        : {
    "transform"       : [ "reactify", "envify" ]
  },
  "jest"            : {
    "rootDir"         : "./js"
  }
}
