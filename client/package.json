{
  "name"            : "MediaStream",
  "version"         : "0.0.1",
  "description"     : "A media streaming application",
  "main"            : "js/app.js",
  "dependencies"    : {
    "classnames"          : "^2.1.3",
    "flux"                : "^2.0.0",
    "keymirror"           : "~0.1.0",
    "object-assign"       : "^1.0.0",
    "react"               : "^15.1.0",
    "react-dom"           : "^15.1.0",
    "mousetrap"           : "^1.6.0",
    "blueimp-load-image"  : "^2.6.1",
    "spin.js"             : "^2.3.2",
    "video.js"            : "^5.10.2",
    "howler"              : "^2.0.0-beta13"
  },
  "devDependencies" : {
    "browserify"          : "^13.0.1",
    "envify"              : "^3.4.0",
    "jest-cli"            : "^0.4.3",
    "reactify"            : "^1.1.1",
    "uglify-js"           : "^2.4.10",
    "watchify"            : "^2.1.1",
    "jquery"              : "^2.2.0",
    "bootstrap"           : "^3.3.6",
    "babelify"            : "^7.3.0",
    "babel-preset-es2015" : "^6.9.0",
    "babel-preset-react"  : "^6.5.0"
  },
  "scripts"         : {
    "start"           : "watchify -o ./static/bundle.js -v -d js/app.js & sass --watch sass:./static/assets/",
    "build"           : "browserify -t [ babelify --presets [ es2015 react ] ] -t [envify --NODE_ENV production] js/app.js | uglifyjs -cm > ./static/bundle.min.js",
    "test"            : "jest"
  },
  "author"          : "Nicholas M. Iodice",
  "browserify"        : {
    "transform"       : [ "reactify", "envify" ]
  },
  "jest"            : {
    "rootDir"         : "./js"
  }
}
