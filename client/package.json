{
  "name"            : "mediaserver",
  "version"         : "0.0.1",
  "description"     : "A media server",
  "main"            : "js/app.js",
  "dependencies"    : {
    "classnames"      : "^2.1.3",
    "flux"            : "^2.0.0",
    "keymirror"       : "~0.1.0",
    "object-assign"   : "^1.0.0",
    "react"           : "^0.12.0",
    "mousetrap"       : "^1.5.3"
  },
  "devDependencies" : {
    "browserify"      : "^6.2.0",
    "envify"          : "^3.0.0",
    "jest-cli"        : "^0.4.3",
    "reactify"        : "^0.15.2",
    "uglify-js"       : "~2.4.15",
    "watchify"        : "^2.1.1",
    "jquery"          : "2.2.0",
    "bootstrap"       : "3.3.6",
    "howler"          : "2.0.0-beta7"
  },
  "scripts"         : {
    "start"           : "watchify -o ../www/bundle.js -v -d js/app.js & sass --watch sass:../www/",
    "build"           : "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > ../www/bundle.min.js",
    "test"            : "jest"
  },
  "author"          : "Nicholas M. Iodice",
  "browserify"        : {
    "transform"       : [ "reactify", "envify" ]
  },
  "jest"            : {
    "rootDir"         : "./js"
  }
}
